config setup
	charondebug = "all"
	uniqueids = yes
conn devgateway-to-prodgateway
	type = tunnel
	auto = add
	auto = start
	keyexchange =ikev2
	authby = secret
	left = 10.20.20.1
	leftsubnet = 192.168.100.0/24
	right = 10.20.20.2
	rightsubnet = 192.168.200.0/24
	rightsourceip = 192.168.200.0/24
	ike = aes128-sha1-modp1024!
	esp = aes128-sha1!
	aggressive = no
	keyingtries = %forever
	ikelifetime = 28800s
	lifetime = 3600s
	dpddelay = 30s
	dpdtimeout = 120s
	dpdaction = restart
